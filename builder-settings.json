{
    // paths
    "CoronaBuilderPath": "/Applications/CoronaSDK/Native/Corona/mac/bin/CoronaBuilder.app/Contents/MacOS/",
    "CoronaProjectToBuild": "src/",
    "BuildFolder": "builds/",

    // settings
    "platformsToBuildTo": ["ios","android"], // "ios" "android" or both

    // shared
    "major": 0, // first part of version code X._
    "minor": 0, // second part of version code _.X

    // iOS
    "ios_pubLevel": "internal", // publication level. "production", "beta", "alpha", or "internal"
    "ios_appName": "App Name",
    "ios_appPackage": "com.test.app",
    "ios_provisionPrefix": "App_Name",
    "ios_appleAppId": "XXXXXXXXXX",

    // Android
    "android_pubLevel": "internal", // publication level. "production", "beta", "alpha", or "internal"
    "android_appName": "App Name",
    "android_appPackage": "com.test.app",
    "android_extraVersionCode": 1 // if you publish under the same vesrion code, iOS will automatically give you a different build number. On Android you must increment this yourself if you want to publish under the same version code.
}
